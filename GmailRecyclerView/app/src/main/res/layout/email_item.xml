<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardview_bg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/circle"
        />

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/txt_icon"
        android:layout_alignTop="@id/txt_icon"
        android:text="Facebook"
        android:layout_toStartOf="@id/txt_date"
        android:textColor="@color/darkGrey"
        />

    <TextView
        android:id="@+id/txt_subject"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user"
        android:layout_alignStart="@id/txt_user"
        android:textSize="16sp"
        android:text="Assunto Assunto Assunto"
        android:textColor="@color/darkGrey"
        />

    <TextView
        android:id="@+id/txt_preview"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_subject"
        android:layout_alignStart="@id/txt_user"
        android:textSize="16sp"
        android:layout_marginEnd="24dp"
        android:text="Preview Preview Preview"
        android:textColor="@color/darkGrey"
        />


    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"

        android:text="20 mai"
        android:textColor="@color/darkGrey"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp" />


<ImageView
    android:id="@+id/img_star"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_star"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"/>




</RelativeLayout>


</androidx.cardview.widget.CardView>